{%extends 'base.html.twig' %}

{%block content%}
{{ form_start(formClass,{'attr': {'novalidate':'novalidate'}}) }}
<div class="col-xl-6 d-flex">
    <div class="card flex-fill">
        <div class="card-header">
            <h4 class="card-title">{% block title %}Add New Appointement{%endblock%}</h4>
        </div>
<div class="card-body">
    <form action="#">
        <div class="form-group row">
            <label class="col-lg-3 col-form-label">{{ form_label(formClass.Id_Rdv,"Id_Rdv")  }}</label>
            <div class="col-lg-9">
                {{ form_widget(formClass.Id_Rdv) }}
                {{ form_errors(formClass.Id_Rdv) }}
            </div>
        </div>
        <div class="form-group row">
            <label class="col-lg-3 col-form-label">{{ form_label(formClass.Docteur,"Docteur") }}</label>
            <div class="col-lg-9">
                {{ form_widget(formClass.Docteur)}}
                {{ form_errors(formClass.Docteur) }}
            </div>
        </div>
        <div class="form-group row">
            <label class="col-lg-3 col-form-label">{{ form_label(formClass.Patient,"Patient") }}</label>
            <div class="col-lg-9">
               {{ form_widget(formClass.Patient)}}
               {{ form_errors(formClass.Patient) }}
            </div>
        </div>
        <div class="form-group row">
            <label class="col-lg-3 col-form-label">{{ form_label(formClass.date,"Date") }}</label>
            <div class="col-lg-9">
               {{ form_widget(formClass.date)}}
            </div>
        </div>
        <div class="form-group row">
            <label class="col-lg-3 col-form-label">{{ form_label(formClass.adresse,"adresse") }}</label>
            <div class="col-lg-9">
               {{ form_widget(formClass.adresse)}}
            </div>
        </div>
        
        <div class="text-right">
            <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
            {{ form_widget(formClass.save)}}
        </div>
    </form>
    <a href="{{ path('afficheR') }}">back to list</a>
</div>
{{ form_end(formClass) }}
{%endblock%}