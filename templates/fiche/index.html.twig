{% extends 'base.html.twig' %}

{% block title %}Fiche index{% endblock %}

{% block content %}
    <h1>Fiche index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Id_Patient</th>
                <th>Age</th>
                <th>RendezVous</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fiche in fiches %}
            <tr>
                <td>{{ fiche.id }}</td>
                <td>{{ fiche.IdPatient }}</td>
                <td>{{ fiche.age }}</td>
                
                <td>
                    <a href="{{ path('app_fiche_show', {'id': fiche.id}) }}">show</a>
                    <a href="{{ path('app_fiche_edit', {'id': fiche.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_fiche_new') }}">Create new</a>
{% endblock %}
