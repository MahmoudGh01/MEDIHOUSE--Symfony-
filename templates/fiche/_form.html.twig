{%extends 'base.html.twig' %}

{%block content%}
{{ form_start(form,{'attr': {'novalidate':'novalidate'} }) }}
<div class="col-xl-6 d-flex">
    <div class="card flex-fill">
        <div class="card-header">
            <h4 class="card-title">{% block title %}Add New Appointement{%endblock%}</h4>
        </div>
<div class="card-body">
    <form action="#">
        
        <div class="form-group row">
            <label class="col-lg-3 col-form-label">{{ form_label(form.age,"age") }}</label>
            <div class="col-lg-9">
                {{ form_widget(form.age)}}
                {{ form_errors(form.age) }}
            </div>
        </div>
        <div class="form-group row">
            <label class="col-lg-3 col-form-label">{{ form_label(form.Id_Patient,"Id_Patient") }}</label>
            <div class="col-lg-9">
               {{ form_widget(form.Id_Patient)}}
               {{ form_errors(form.Id_Patient) }}
            </div>
        </div>
       
        
        <div class="text-right">
            <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
            {{ form_widget(form.save)}}
        </div>
    </form>
    <a href="{{ path('afficheR') }}">back to list</a>
</div>
{{ form_end(form) }}
{%endblock%}